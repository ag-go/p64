REM Bouncy Ball Demo

REM Init game state and store in RAM banks
POKE 1, RND 64
POKE 2, RND 64
POKE 3, 1
POKE 4, -1
END

.INTR KEYDOWN
LET DX = PEEK 3
LET DY = PEEK 4
IF KEY = "Left" THEN DX = DX - 0.5
IF KEY = "Right" THEN DX = DX + 0.5
IF KEY = "Up" THEN DY = DY - 0.5
IF KEY = "Down" THEN DY = DY + 0.5
POKE 3, DX
POKE 4, DY
END

.INTR KEYUP
END

.INTR VSYNC
CLEAR
LET X = PEEK 1
LET Y = PEEK 2
LET DX = PEEK 3
LET DY = PEEK 4
X = X + DX
Y = Y + DY
PRINT

100 GOSUB 1000
200 GOSUB 1100
300 GOSUB 1200
400 GOSUB 1300
500 GOTO 2000

1000 IF X > 0 THEN RETURN
1010 X = 1
1020 DX = 1
1030 RETURN

1100 IF X < 64 THEN RETURN
1110 X = 63
1120 DX = -1
1130 RETURN

1200 IF Y > 0 THEN RETURN
1210 Y = 1
1220 DY = 1
1230 RETURN

1300 IF Y < 64 THEN RETURN
1310 Y = 62
1320 DY = -1 * DY
1330 RETURN

2000 PRINT 
2010 DY = DY + 0.06
2020 POKE 1, X
2030 POKE 2, Y
2040 POKE 3, DX
2050 POKE 4, DY
2060 SET X,Y,1
END
