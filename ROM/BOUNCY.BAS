REM Bouncy Ball Demo

REM Init game state and store in RAM banks
LET X = RND 64
LET Y = RND 64
LET DX = 1
LET DY = 1
POKE 1, X
POKE 2, Y
POKE 3, DX
POKE 4, DY
DEBUG
CLEAR
END

.INTR KEYDOWN
PRINT "KEY DOWN", KEY
END

.INTR KEYUP
PRINT "KEY UP", KEY
END

.INTR VSYNC
CLEAR
X = PEEK 1
Y = PEEK 2
DX = PEEK 3
DY = PEEK 4
X = X + DX
Y = Y + DY

90 PRINT
100 IF X < 0 THEN GOSUB 1000
101 PRINT 
200 IF X > 63 THEN GOSUB 1100
201 PRINT 
300 IF Y < 0 THEN GOSUB 1200
301 PRINT 
400 IF Y > 63 THEN GOSUB 1300
401 PRINT 
SET X,Y,1
POKE 1, X
POKE 2, Y
POKE 3, DX
POKE 4, DY
500 GOTO 2000

1000 PRINT "left\n"
LET X = 1
LET DX = 1
RETURN

1100 PRINT "right\n"
LET X = 62
LET DX = -1
RETURN

1200 PRINT "top\n"
LET Y = 1
LET DY = 1
RETURN

1300 PRINT "bottom\n"
LET Y = 62
LET DY = -1
RETURN

2000 END
